<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.mixi.practice.database"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="jp.mixi.practice.database.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.mixi.practice.database.SQLiteActivity"
            android:label="@string/sqlite_name" />

        <!-- TODO:ここのexportedをfalseに変更する -->
        <provider
            android:name="jp.mixi.practice.database.BookContentProvider"
            android:authorities="jp.mixi.practice.database.contentprovider.Book"
            android:exported="true" />
    </application>

</manifest>